<%- include('partials/header'); -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">
    <div class="mb-3">
        <label for="" class="form-label">Title</label>
        <input type="text" name="postTitle" class="form-control" placeholder="" autocomplete="off" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Post</label>
        <textarea name="postBody" cols="30" rows="5" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

